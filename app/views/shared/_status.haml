=w.verb
%span.amount
  =w.amount.pretty
=w.noun
.comments
  -w.comments.each do |c|
    =render :partial=>"shared/comment", :locals=>{:comment=>c}
.action_wrapper
  .actions
    -if (!current_user.nil? && current_user.id == w.user.id)
      %a.delete{:href=>"", :status=>w.id} Delete
      %a.upload{:href=>"", :status=>w.id} Upload
    -if (!current_user.nil?)
      %a.comment{:href => ""} Comment
      .comment_box{:class => "comment"} 
        %input{:class => "comment_description", :type => "text", :id => "comment_#{w.id}"}
        %button{:type => "submit", :class => "submit_comment" } 
          Add Comment
      .upload_form
        %input.file{:type=>"file", :name=>"win[file]"}
        .save
          %input{:type=>"submit", :value=>"upload"}
